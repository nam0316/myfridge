<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical">

    <!-- 날짜 이동 바 -->
    <LinearLayout
        android:id="@+id/date_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_prev_date"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="&lt;"
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center"
            android:background="@drawable/button_outline"/>

        <TextView
            android:id="@+id/tv_current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:text="2025-09-19"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E3A4B" />

        <TextView
            android:id="@+id/btn_next_date"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="&gt;"
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center"
            android:background="@drawable/button_outline"/>
    </LinearLayout>

    <!-- 완료 삭제 + 추가 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_clear_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료 삭제"
            android:backgroundTint="#87CEEB"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#87CEEB"
            app:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_input_add" />

    </LinearLayout>

    <!-- RecyclerView (스크롤 영역) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shopping_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false"/>

    <!-- 요약 & 공유 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_item_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="총 0개 중 0개 담음"
            android:textColor="#2E3A4B"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_share_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목록 공유하기"
            android:backgroundTint="#87CEEB"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- 총 금액 (하단 고정) -->
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="총 금액: 0원"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2E3A4B"
        android:gravity="start"
        android:background="#FFFFFF"
        android:layout_marginBottom="75dp"/>

</LinearLayout>

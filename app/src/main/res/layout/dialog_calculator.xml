<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 상단: 기록 보기 / 입력창 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 계산 기록 -->
        <ScrollView
            android:id="@+id/scroll_history"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            android:background="#F1F3F4"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5F6368"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />
        </ScrollView>

        <!-- 입력/결과창 -->
        <EditText
            android:id="@+id/et_calc_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:textSize="36sp"
            android:gravity="end"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:padding="12dp" />
    </LinearLayout>

    <!-- 버튼 영역 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp">

        <!-- 1행 -->
        <Button android:id="@+id/btn_clear" android:text="C" style="@style/CalcButton.Function"/>
        <Button android:id="@+id/btn_percent" android:text="%" style="@style/CalcButton.Function"/>
        <Button android:id="@+id/btn_divide" android:text="÷" style="@style/CalcButton.Operator"/>
        <Button android:id="@+id/btn_delete" android:text="⌫" style="@style/CalcButton.Function"/>

        <!-- 2행 -->
        <Button android:id="@+id/btn_7" android:text="7" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_8" android:text="8" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_9" android:text="9" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_multiply" android:text="×" style="@style/CalcButton.Operator"/>

        <!-- 3행 -->
        <Button android:id="@+id/btn_4" android:text="4" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_5" android:text="5" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_6" android:text="6" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_minus" android:text="−" style="@style/CalcButton.Operator"/>

        <!-- 4행 -->
        <Button android:id="@+id/btn_1" android:text="1" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_2" android:text="2" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_3" android:text="3" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_plus" android:text="+" style="@style/CalcButton.Operator"/>

        <!-- 5행 -->
        <Button android:id="@+id/btn_plus_minus" android:text="+/−" style="@style/CalcButton.Function"/>
        <Button android:id="@+id/btn_0" android:text="0" style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_dot" android:text="." style="@style/CalcButton.Number"/>
        <Button android:id="@+id/btn_equal" android:text="=" style="@style/CalcButton.Equal"/>
    </GridLayout>

    <!-- 기록 보기 토글 버튼 -->
    <Button
        android:id="@+id/btn_toggle_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록 보기"
        android:textColor="#1A73E8"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:padding="8dp" />

</LinearLayout>

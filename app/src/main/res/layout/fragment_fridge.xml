<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <!--  상단 타이틀  -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!--  보관중/임박 개수  -->
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="4dp"
        android:text="보관중 0개 · 임박 0개"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <!--  카테고리 ChipGroup  -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_summary"
        android:layout_marginTop="12dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/sky_blue"
            android:textColor="@android:color/white"
            android:text="전체"
            android:checkable="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_fridge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/sky_blue"
            android:textColor="@android:color/white"
            android:text="냉장" android:checkable="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_freezer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/sky_blue"
            android:textColor="@android:color/white"
            android:text="냉동" android:checkable="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/sky_blue"
            android:textColor="@android:color/white"
            android:text="실온" android:checkable="true"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/sky_blue"
            android:textColor="@android:color/white"
            android:text="기타" android:checkable="true"/>
    </com.google.android.material.chip.ChipGroup>

    <!--  아이템 리스트 (RecyclerView)  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fridge_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/chip_group"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"/>

    <!--  플로팅 액션 버튼 (+ 아이콘)  -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:backgroundTint="#87CEEB"
        app:tint="@android:color/white"
        app:srcCompat="@android:drawable/ic_input_add"/>
</RelativeLayout>

